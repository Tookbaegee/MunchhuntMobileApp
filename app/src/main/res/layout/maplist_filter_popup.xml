<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="Filters"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_marginTop="8dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/distanceFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/distanceInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter distance in miles"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:inputType="number"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/priceFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/priceInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter price"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:inputType="numberDecimal"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/typeFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Type"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="11dp"/>

            <Button
                android:id="@+id/quickEatsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick-eats"
                android:textAllCaps="false"
                android:backgroundTint="@color/filter_grey"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_button"
                android:minWidth="100dp"
                android:minHeight="50dp"/>

            <Button
                android:id="@+id/sitDownButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sit-down"
                android:textAllCaps="false"
                android:backgroundTint="@color/filter_grey"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/quickEatsButton"
                android:background="@drawable/rounded_button"
                android:layout_marginRight="5dp"
                android:minWidth="100dp"
                android:minHeight="50dp" />


        </RelativeLayout>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/applyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:backgroundTint="@color/hot_pink"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_button"
            />




    </LinearLayout>



</RelativeLayout>